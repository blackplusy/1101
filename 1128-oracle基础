select * from test1 where department='计算机系'
and place='北京';

update test1 set department='信息学院'
where department='计算机系';

select t1.no,t1,name,t2.grade,t2.courses from test1 t1,test2 t2
where t1.no=t2.no
and t2.grade>=75;










